<Window x:Class="Crud_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crud_Demo"
        mc:Ignorable="d"
        Title="AdminPanel" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="21"/>
            <RowDefinition Height="21"/>
            <RowDefinition Height="21"/>
            <RowDefinition Height="21"/>
            <RowDefinition Height="21"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Welcome!" Grid.ColumnSpan="3" FontSize="40" FontFamily="Bahnschrift SemiBold" Margin="0,22,0,21" Grid.RowSpan="3" Grid.Column="1"/>
        <TextBox x:Name="ID" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="139,0,0,0" Text="ID"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Grid.Row="3" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="139,0,0,0" TextChanged="Name_TextChanged"/>
        <TextBox x:Name="Username" HorizontalAlignment="Left"  Grid.Row="4" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="139,0,0,0"/>
        <TextBox x:Name="Address" HorizontalAlignment="Left" Grid.Row="5" TextWrapping="Wrap" Text="Endereço" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="139,0,0,0"/>
        <TextBox x:Name="Age" HorizontalAlignment="Left" Grid.Row="6" TextWrapping="Wrap" Text="Idade" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Margin="139,0,0,0"/>
        <DataGrid ItemsSource="{Binding Employees}" x:Name="usersGrid" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="5" Margin="73,0,137,87" AutoGenerateColumns="True" CanUserAddRows="False" CanUserDeleteRows="False" SelectionChanged="usersGrid_SelectionChanged">
            <DataGrid.Columns>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Create" Grid.Row="6" Grid.Column="1" Grid.RowSpan="1" Margin="73,31,46,31" Click="Create"/>
        <Button Content="Read" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="176,31,143,31" Click="Read"/>
        <Button Content="Update" Grid.Row="6" Grid.Column="2" Grid.RowSpan="1" Margin="79,31,40,31" Click="Update"/>
        <Button Content="Delete" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="182,31,137,31" Click="Delete"/>
        <Button Content="Clear" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="182,73,137,10" Click="ClearGrid"/>
    </Grid>
</Window>
